<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:layout_marginTop="100dp"
              android:layout_marginBottom="100dp"
              android:layout_marginLeft="200dp"
              android:layout_marginRight="200dp"
              >

    <RelativeLayout android:id="@+id/preferences_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

        <TextView android:text="@string/preferences_title" style="@style/tagTextTitle"
                  android:id="@+id/preferences_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:layout_margin="10dip" />

        <TextView android:text="@string/preferences_browser_title" style="@style/tagTextTitle"
                  android:id="@+id/preferences_browser_title"
                  android:layout_below="@id/preferences_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:layout_margin="10dip" />

        <TextView android:text="@string/preferences_browser" style="@style/tagTextNormal"
                  android:id="@+id/preferences_browser_label"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignBottom="@+id/preferences_browser"
                  android:layout_alignTop="@+id/preferences_browser"
                  android:gravity="center"
                  android:layout_marginLeft="10dip" />

        <EditText android:text="" style="@style/tagEditText"
                  android:id="@+id/preferences_browser"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_below="@id/preferences_browser_title"
                  android:editable="false"
                  android:focusable="false"
                  android:gravity="center"
                  android:layout_width="150dip" />



        <Button android:id="@+id/preferences_button_change_browser"
                android:text="@string/preferences_change_browser"
                android:layout_below="@id/preferences_browser"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_width="150dip" />


        <TextView android:text="@string/preferences_location_title" style="@style/tagTextTitle"
                  android:id="@+id/preferences_location_title"
                  android:layout_below="@id/preferences_button_change_browser"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:layout_margin="10dip" />

        <CheckBox android:id="@+id/preferences_checkbox_mylocation"
                  style="@style/tagTextNormal"
                  android:layout_below="@id/preferences_location_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dip"
                  android:text="@string/preference_mylocation" />
                  
                
    </RelativeLayout>
    
    <Button android:id="@+id/preferences_button_close"
                android:text="@string/close"
                android:layout_width="150dip" 
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dip"
                android:layout_marginLeft="70dip"
                />


</LinearLayout>