<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" >
    
    <LinearLayout
              style="@style/tagLayout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

        <TextView android:text="@string/dialog_send" style="@style/tagTextTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- Search location -->

        <TextView android:text="@string/dialog_send_search_location"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"        
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />


        <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

            <TextView android:id="@+id/send_search_gps"
                  android:text="@string/send_search_gps"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_margin="10dip"
                  />

            <ProgressBar android:id="@+id/send_search_location_progress_gps"
                     style="?android:attr/progressBarStyleSmall"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dip"
                     />

        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

            <TextView android:id="@+id/send_search_network"
                  android:text=""
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_margin="10dip"
                  />

            <ProgressBar android:id="@+id/send_search_location_progress_network"
                     style="?android:attr/progressBarStyleSmall"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dip"
                     />

        </LinearLayout>

        <TextView android:id="@+id/send_search_address"
                  android:text=""
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_margin="10dip"
                  />

        <!-- Enter tag title -->
        
        <TextView android:text="@string/dialog_send_enter_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
        android:id="@+id/edit_title"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dip"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />


        <!-- Enter tag title -->
        
        <TextView android:text="@string/dialog_send_share"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="10dip"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox android:id="@+id/send_share_checkbox"
              android:text="@string/dialog_send_share_checkbox" 
              style="@style/tagTextNormal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="10dip"/>
              

        <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_margin="10dip">

            <Button android:layout_height="wrap_content"
                android:id="@+id/send_send_button"
                android:text="@string/send"
                android:layout_width="120dip" />

            <Button android:layout_height="wrap_content"
                android:id="@+id/send_cancel_button"
                android:text="@string/cancel"
                android:layout_width="120dip" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>