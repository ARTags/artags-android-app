<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent" 
              android:layout_height="wrap_content"
              android:background="@drawable/background"
              android:layout_gravity="center">"
    

    <ImageButton
        android:id="@+id/button_draw"
        android:background="@drawable/bt_draw" android:layout_height="200px" android:layout_width="200px" android:layout_gravity="center_horizontal" android:layout_margin="5px"/>

    <ImageButton
        android:id="@+id/button_display"
        android:layout_height="200px" android:layout_width="200px" android:background="@drawable/bt_display" android:layout_gravity="center_horizontal" android:layout_margin="5px"/>

</LinearLayout>